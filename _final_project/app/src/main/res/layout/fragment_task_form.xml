<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/app_background_color">

    <TextView
        android:id="@+id/fragTaskForm_taskTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Title:"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/fragTaskForm_taskTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fragTaskForm_taskTitleTextView"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="10dp"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/fragTaskForm_taskDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Task description:"
        android:layout_below="@+id/fragTaskForm_taskTitleTextView"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/fragTaskForm_taskDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@+id/fragTaskForm_taskDescriptionTextView"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/fragTaskForm_urgentTaskTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragTaskForm_taskDescriptionEditText"
        android:text="Urgent task"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"/>

    <CheckBox
        android:id="@+id/fragTaskForm_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragTaskForm_taskDescriptionEditText"
        android:layout_toEndOf="@+id/fragTaskForm_urgentTaskTextView"/>

    <Button
        android:id="@+id/fragTaskForm_doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/done_task_color"
        android:layout_toEndOf="@id/fragTaskForm_checkBox"
        android:layout_alignBottom="@+id/fragTaskForm_checkBox"
        android:layout_marginStart="40dp"
        android:text="Done"/>

</RelativeLayout>